<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ALTAS Hotels Reservation System</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('/images/screen.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
            color: white;
        }
        h1, h2 {
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-control {
            background-color: rgba(255, 255, 255, 0.2);
            color: white;
        }
        .form-control::placeholder {
            color: white;
            opacity: 0.5;
        }
        .text-danger {
            color: #ff3860;
        }
        .table-dark {
            background-color: rgba(0, 0, 0, 0.8);
        }
        .modal-content {
            background-color: #343a40;
            color: white;
        }
        .modal-header, .modal-footer {
            border-color: #454d55;
        }
        .btn-close {
            filter: invert(1);
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Welcome to ALTAS HOTELS Reservation System</h1>

        @if (Model.UserEmail == null)
        {
            <div class="d-flex justify-content-center mt-4">
                <a class="btn btn-primary mx-2" asp-page="/Register">Register</a>
                <a class="btn btn-primary mx-2" asp-page="/Login">Login</a>
            </div>
        }
        else
        {
            <h2 class="text-center mt-4">Hi dear customer, @Model.UserEmail</h2>
            <div class="text-center mt-3">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createRoomModal">Create New Room</button>
            </div>

            <h2 class="mt-5">Available Rooms</h2>
            <table class="table table-dark table-striped mt-3">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Capacity</th>
                        <th>View</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Rooms != null)
                    {
                        foreach (var room in Model.Rooms)
                        {
                            <tr>
                                <td>@room.Name</td>
                                <td>@room.Capacity</td>
                                <td>@room.View</td>
                                <td>
                                    @if (room.Reservations != null && room.Reservations.Any())
                                    {
                                        <span class="badge bg-warning">Reserved</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-page="/CreateReservation" asp-route-roomId="@room.Id">Reserve</a>
                                    <form method="post" asp-page-handler="DeleteRoom" asp-route-roomId="@room.Id" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

            <div class="text-center mt-4">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#filterModal">Filter Reserved Rooms</button>
                <form method="get" class="d-inline">
                    <button type="submit" class="btn btn-secondary">Clear Filters</button>
                </form>
            </div>

            <h2 class="mt-5">Booked Rooms</h2>
            <table class="table table-dark table-striped mt-3">
                <thead>
                    <tr>
                        <th>Room Name</th>
                        <th>User Name</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model.ReservedRooms)
                    {
                        <tr>
                            <td>@reservation.Room.Name</td>
                            <td>@reservation.UserName</td>
                            <td>@reservation.StartDate.ToShortDateString()</td>
                            <td>@reservation.EndDate.ToShortDateString()</td>
                            <td>
                                @if (reservation.UserName == Model.UserEmail)
                                {
                                    <button class="btn btn-warning btn-sm" onclick="openEditModal(@reservation.Id, '@reservation.StartDate.ToString("yyyy-MM-dd")', '@reservation.EndDate.ToString("yyyy-MM-dd")')">Edit</button>
                                    <form method="post" asp-page-handler="DeleteReservation" asp-route-id="@reservation.Id" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Filter Modal -->
            <div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="filterModalLabel">Filter Booked Rooms</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form method="get" class="row g-3">
                                <div class="col-md-6">
                                    <label for="filterRoomName" class="form-label">Filter by Room Name</label>
                                    <input type="text" id="filterRoomName" name="FilterRoomName" class="form-control" value="@Model.FilterRoomName" />
                                </div>
                                <div class="col-md-6">
                                    <label for="filterCapacity" class="form-label">Filter by Capacity</label>
                                    <input type="number" id="filterCapacity" name="FilterCapacity" class="form-control" value="@Model.FilterCapacity" />
                                </div>
                                <div class="col-md-6">
                                    <label for="filterStartDate" class="form-label">Filter by Start Date</label>
                                    <input type="date" id="filterStartDate" name="FilterStartDate" class="form-control" value="@Model.FilterStartDate?.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-md-6">
                                    <label for="filterEndDate" class="form-label">Filter by End Date</label>
                                    <input type="date" id="filterEndDate" name="FilterEndDate" class="form-control" value="@Model.FilterEndDate?.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary">Apply Filters</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Create Room Modal -->
            <div class="modal fade" id="createRoomModal" tabindex="-1" aria-labelledby="createRoomModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="createRoomModalLabel">Create New Room</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="createRoomForm" method="post" asp-page="Index" asp-page-handler="CreateRoom">
                                <div class="mb-3">
                                    <label asp-for="NewRoom.Name" class="form-label"></label>
                                    <input asp-for="NewRoom.Name" class="form-control" />
                                    <span asp-validation-for="NewRoom.Name" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="NewRoom.Capacity" class="form-label"></label>
                                    <input asp-for="NewRoom.Capacity" class="form-control" type="number" />
                                    <span asp-validation-for="NewRoom.Capacity" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="NewRoom.View" class="form-label"></label>
                                    <input asp-for="NewRoom.View" class="form-control" />
                                    <span asp-validation-for="NewRoom.View" class="text-danger"></span>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Create</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Edit Reservation Modal -->
            <div class="modal fade" id="editReservationModal" tabindex="-1" aria-labelledby="editReservationModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editReservationModalLabel">Edit Reservation</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="editReservationForm" method="post" asp-page="Index" asp-page-handler="EditReservation">
                                <input type="hidden" id="editReservationId" asp-for="EditedReservation.Id" />
                                <div class="mb-3">
                                    <label asp-for="EditedReservation.StartDate" class="form-label"></label>
                                    <input asp-for="EditedReservation.StartDate" class="form-control" type="date" id="editStartDate" />
                                    <span asp-validation-for="EditedReservation.StartDate" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="EditedReservation.EndDate" class="form-label"></label>
                                    <input asp-for="EditedReservation.EndDate" class="form-control" type="date" id="editEndDate" />
                                    <span asp-validation-for="EditedReservation.EndDate" class="text-danger"></span>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- JavaScript for loading reservation data into modal -->
    <script>
        function openEditModal(id, startDate, endDate) {
            document.getElementById("editReservationId").value = id;
            document.getElementById("editStartDate").value = startDate;
            document.getElementById("editEndDate").value = endDate;
            var editReservationModal = new bootstrap.Modal(document.getElementById('editReservationModal'));
            editReservationModal.show();
        }

        function deleteReservation(id) {
            if (confirm("Are you sure you want to delete this reservation?")) {
                $.ajax({
                    type: "POST",
                    url: "?handler=DeleteReservation",
                    data: { id: id },
                    success: function (response) {
                        location.reload();
                    },
                    error: function (xhr, status, error) {
                        alert("An error occurred while deleting the reservation: " + error);
                    }
                });
            }
        }
    </script>

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
